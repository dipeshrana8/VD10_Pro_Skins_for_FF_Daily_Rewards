<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#2C2B2B"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:id="@+id/ll_ad_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_ad_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:id="@+id/iv_ad_image"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/banner_image" />

                <TextView
                    android:id="@+id/tv_ad_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_native"
                    android:backgroundTint="@color/colorprimary"

                    android:elevation="@dimen/_3sdp"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingHorizontal="7dp"
                    android:paddingVertical="4dp"
                    android:paddingLeft="7dp"
                    android:paddingTop="4dp"
                    android:paddingRight="7dp"
                    android:paddingBottom="4dp"
                    android:text="AD"
                    android:textColor="#000000"
                    android:textSize="10dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_ad_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_medium"
                android:maxLines="1"
                android:paddingHorizontal="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Play &amp; Win Coins"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/tv_ad_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_regular"
                android:maxLines="1"
                android:paddingHorizontal="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Play &amp; Win Coins"
                android:textColor="@color/white"
                android:textSize="@dimen/_8ssp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_ad_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bg_native"
                android:backgroundTint="@color/colorprimary"
                android:elevation="@dimen/_3sdp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Open"
                android:textColor="#000000"

                android:textSize="13sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
